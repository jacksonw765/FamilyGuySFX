<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.jacksonw765.familyguysfx.MainTabs">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/appbar_padding_top">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:visibility="visible"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabMode="scrollable">

            <android.support.design.widget.TabItem
                android:id="@+id/tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_bruce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bruce" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_brian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brian"/>

            <android.support.design.widget.TabItem
                android:id="@+id/tab_chris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chris" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_cleveland"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cleveland" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_herbert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Herbert" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_lois"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lois" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_mort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mort" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_peter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peter" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_quagmire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quagmire" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_stewie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stewie" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_songs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Songs" />

            <android.support.design.widget.TabItem
                android:id="@+id/tab_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info" />


        </android.support.design.widget.TabLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="605dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout_editor_absoluteY="53dp">

    </android.support.v4.view.ViewPager>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_weight="1"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7225811178915318/2239042965"
        app:layout_anchor="@+id/container"
        app:layout_anchorGravity="bottom"/>

</android.support.design.widget.CoordinatorLayout>
